@model IOTManagementGroup7.Models.ViewModels.CameraVM


@{
    ViewData["Title"] = "Upsert";
    var title = "Create Camera";
}

<form method="post">
    <div class="row p-3 border col-6 offset-md-3">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        @if (Model.Camera.Id != 0)
        {
            title = "Edit Camera";
            <input type="hidden" asp-for="Camera.Id" />
        }
        <div class="col-12 border-bottom">
            <h2 class="text-primary">@title</h2>
        </div>
        <div class="col-12 pt-4">
            <div class="form-group row">
                <div class="col-4">
                    UserName
                </div>
                <div class="col-8">
                    @Html.DropDownListFor(m => m.Camera.ApplicationUserId, Model.ApplicationUserList, "-Select a UserName",
                   new { @class = "form-control" })
                    <span asp-validation-for="Camera.ApplicationUserId" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Camera.Name"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Camera.Name" class="form-control" />
                    <span asp-validation-for="Camera.Name" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label>Power</label>
                </div>
                <div class="col-8">
                    <input asp-for="Camera.PowerStatus" data-on="Turn On" data-off="Turn Off" data-toggle="toggle" data-offstyle="danger" class="form-control" />
                    <span asp-validation-for="Camera.PowerStatus" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label>Connection</label>
                </div>
                <div class="col-8">
                    <input asp-for="Camera.ConnectionStatus" data-on="Turn On" data-off="Turn Off" data-toggle="toggle" data-offstyle="danger" class="form-control" />
                    <span asp-validation-for="Camera.ConnectionStatus" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Camera.NightVersionStatus"></label>
                </div>
                <div class="col-8">
                    <select asp-for="Camera.NightVersionStatus" class="form-control">
                        <option>AUTO</option>
                        <option>ON</option>
                        <option>OFF</option>
                    </select>
                </div>
                <span asp-validation-for="Camera.NightVersionStatus" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label>TimelapsRecording</label>
                </div>
                <div class="col-8">
                    <input asp-for="Camera.TimelapsRecordingStatus" type="checkbox" data-toggle="toggle" data-on="<i class='fa fa-play'></i> Play" data-off="<i class='fa fa-pause'></i> Pause" class="form-control" />
                    <span asp-validation-for="Camera.TimelapsRecordingStatus" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Camera.SourceCode"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Camera.SourceCode" class="form-control" />
                    <span asp-validation-for="Camera.SourceCode" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-8 offset-2">
                    @if (Model.Camera.Id != 0)
                    {
                        <partial name="_EditAndBackToListButton" model="Model.Camera.Id" />
                    }
                    else
                    {
                        <partial name="_CreateAndBackToListButton" />

                    }
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/rangeslider.js"></script>
}