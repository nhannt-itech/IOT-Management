@model IOTManagementGroup7.Models.Camera


@{
    ViewData["Title"] = "Upsert";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var title = "Create Camera";
}

<form method="post">
    <div class="row p-3 border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        @if (Model.Id.Length != 0)
        {
            title = "Edit Camera";
        }
        <div class="col-12 border-bottom">
            <h2 class="text-primary">@title</h2>
        </div>
        <div class="col-8 pt-4">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="ApplicationUserId"></label>
                </div>
                <div class="col-8">
                    <input asp-for="ApplicationUserId" class="form-control" />
                    <span asp-validation-for="ApplicationUserId" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Name"></label>
                </div>
                <div class="col-1">
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="PowerStatus"></label>
                </div>
                <div class="col-8">
                    <input asp-for="PowerStatus" class="form-control" />
                    <span asp-validation-for="PowerStatus" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="ConnectionStatus"></label>
                </div>
                <div class="col-8">
                    <input asp-for="ConnectionStatus" class="form-control" />
                    <span asp-validation-for="ConnectionStatus" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="NightVersionStatus"></label>
                </div>
                <div class="col-8">
                    <input asp-for="NightVersionStatus" class="form-control" />
                    <span asp-validation-for="NightVersionStatus" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="TimelapsRecordingStatus"></label>
                </div>
                <div class="col-8">
                    <input asp-for="TimelapsRecordingStatus" class="form-control" />
                    <span asp-validation-for="TimelapsRecordingStatus" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="SourceCode"></label>
                </div>
                <div class="col-8">
                    <input asp-for="SourceCode" class="form-control" />
                    <span asp-validation-for="SourceCode" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-8 offset-4">
                    @if (Model.Id.Length != 0)
                    {
                        <partial name="_EditAndBackToListButton" model="Model.Id" />
                    }
                    else
                    {
                        <partial name="_CreateAndBackToListButton" />

                    }
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}