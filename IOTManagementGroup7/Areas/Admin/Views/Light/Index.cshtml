
@{
    ViewData["Title"] = "Index";
}

<br />
<div class="row">
    <div class="col-6">
        <h2 class="text-primary">Light List </h2>
    </div>
    <div class="col-6 text-right">
        <a asp-controller="Light" asp-action="Upsert" class="btn btn-success"><i class="fas fa-plus"></i> &nbsp; Create New</a>
    </div>
</div>

<br />
<div class="p-4 border rounded">
    <table id="tblData" class="table-bordered border-dark text-gray-900" style="width:100%">
        <thead class="thead-dark">
            <tr class="table-info">
                <th>User</th>
                <th>Name</th>
                <th>Power</th>
                <th>Connection</th>
                <th>VoltageRange</th>
                <th>Dim</th>
                <th></th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts{
    <script src="~/js/light.js"></script>
}
