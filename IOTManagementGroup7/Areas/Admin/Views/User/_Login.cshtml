@model IOTManagementGroup7.Areas.Admin.Controllers.UserController.LoginPopupModel
@using IOTManagementGroup7.Utility

<!--Modal Body Start-->
<div class="modal-content">
    <!--Modal Header Start-->
    <div class="modal-header">
        <h4 class="modal-title offset-5">Login</h4>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
    </div>
    <!--Modal Header End-->
    <div class="row">
        <div class="col-md-10 offset-md-1">
            <div class="card-content">
                <div class="row">
                    <div class="col-md-12 p-3">
                        <form asp-area="Admin" asp-controller="User" asp-action="Login" method="post" enctype="multipart/form-data">
                            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                            <div class="form-group row">
                                <label asp-for="Email" class="col-3"></label>
                                <input asp-for="Email" class="form-control col-9" />
                                <span asp-validation-for="Email" class="text-danger offset-1"></span>
                            </div> <br />
                            <div class="form-group row">
                                <label asp-for="Password" class="col-3"></label>
                                <input asp-for="Password" class="form-control col-9" />
                                <span asp-validation-for="Password" class="text-danger offset-1"></span>
                            </div> <br />
                            @*<div class="modal-footer">
                                    <button data-dismiss="modal" id="cancel" class="btn btn-default" type="button">Cancel</button>
                                </div>*@
                            <button type="submit" class="btn btn-primary col-6 offset-md-3">Sign In</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<partial name="_ValidationScriptsPartial" />


